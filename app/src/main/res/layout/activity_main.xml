<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:indexBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.channelst.citychoosedemo.MainActivity">

    <com.channelst.citychoosedemo.citychoose.SideIndexBar
        android:id="@+id/index_bar"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        indexBar:isBoldface="false"
        indexBar:isLetterCenter="true"
        indexBar:letterColor="@color/gray"
        indexBar:letterSize="14sp"
        indexBar:selectBackground="@color/transparentBlack"
        indexBar:selectLetterColor="@color/black"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/index_bar"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/text_dialog"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@color/transparentBlack"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:visibility="gone"/>


</RelativeLayout>
